{
  "name": "best-courses-ever",
  "version": "1.0.0",
  "description": "Otus Best Courses Ever",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tsup",
    "dev": "node --import=tsx --watch src/app/index.ts",
    "start": "npm run dev",
    "start-prod": "node dist/index.js",
    "lint": "biome check",
    "lint-fix": "biome check --write",
    "test": "jest",
    "generate-cert": "node config/utils/selfsigned-cert.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "17.2.2",
    "express": "5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/supertest": "6.0.3",
    "mkcert": "3.2.0",
    "supertest": "7.1.4",
    "tsup": "8.5.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  },
  "tsup": {
    "entry": [
      "src/app/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  }
}
